<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.student.lab09_dialog.MainActivity">

    <TextView
        android:id="@+id/TextViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hello World!"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <Button
        android:id="@+id/ButtonOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickAll"
        android:text="AlertDialog OK"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/ButtonYN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickAll"
        android:text="AlertDialog YES / NO"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/ButtonYNC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickAll"
        android:text="AlertDialog YES / NO /CANCEL"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/ButtonItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickAll"
        android:text="AlertDialog ITEMS"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/ButtonMulitSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickAll"
        android:text="AlertDialog MUTI SEL"
        android:textAllCaps="false" />

</LinearLayout>
